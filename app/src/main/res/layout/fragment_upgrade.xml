<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.home.UpgradeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upgrade"
                android:textColor="@color/grey_textDark"
                android:textSize="@dimen/_18sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_true_dark"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Send unlimited interested"
                    android:textColor="@color/grey_textDark"
                    android:textSize="@dimen/font_size_medium" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pagerUpgrade"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                </androidx.viewpager.widget.ViewPager>


                <LinearLayout
                    android:id="@+id/llDots"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"></LinearLayout>


                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_1sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_3sdp">

                        <TextView
                            android:id="@+id/tvAdvantage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Advantages of FriendlyMony Plus plan"
                            android:textColor="@color/grey_textDark"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvAds"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_5sdp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_all"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_gradient_horizontal_rounded"
                                android:orientation="vertical"
                                android:padding="@dimen/_4sdp">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:elevation="@dimen/_1sdp"
                                        app:cardCornerRadius="@dimen/_8sdp"
                                        app:cardUseCompatPadding="true">

                                        <LinearLayout
                                            android:id="@+id/llOne"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@color/grey_textDark"
                                            android:clickable="true"
                                            android:foreground="?attr/selectableItemBackground"
                                            android:gravity="center"
                                            android:orientation="vertical"
                                            android:paddingTop="@dimen/_10sdp"
                                            android:paddingBottom="@dimen/_10sdp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:text="1 Months"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_11sdp" />

                                            <TextView
                                                android:id="@+id/tv1"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_marginTop="@dimen/_5sdp"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_14sdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:text="( Save 50% )"
                                                android:textColor="@color/grey_text"
                                                android:textSize="@dimen/_10sdp"
                                                android:visibility="invisible" />

                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:elevation="@dimen/_1sdp"
                                        app:cardCornerRadius="@dimen/_8sdp"
                                        app:cardUseCompatPadding="true">

                                        <LinearLayout
                                            android:id="@+id/llTwo"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@color/grey_textDark"
                                            android:clickable="true"
                                            android:foreground="?attr/selectableItemBackground"
                                            android:gravity="center"
                                            android:orientation="vertical"
                                            android:paddingTop="@dimen/_10sdp"
                                            android:paddingBottom="@dimen/_10sdp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:text="3 Months"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_11sdp" />

                                            <TextView
                                                android:id="@+id/tv2"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_marginTop="@dimen/_5sdp"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_14sdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:text="( Save 17% )"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_10sdp"
                                                android:visibility="visible" />

                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp">


                                    <androidx.cardview.widget.CardView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:elevation="@dimen/_1sdp"
                                        app:cardCornerRadius="@dimen/_8sdp"
                                        app:cardUseCompatPadding="true">

                                        <LinearLayout
                                            android:id="@+id/llThree"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@color/white"
                                            android:clickable="true"
                                            android:foreground="?attr/selectableItemBackground"
                                            android:gravity="center"

                                            android:orientation="vertical"
                                            android:paddingTop="@dimen/_10sdp"
                                            android:paddingBottom="@dimen/_10sdp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:text="6 Months"
                                                android:textColor="@color/grey_textDark"
                                                android:textSize="@dimen/_11sdp" />

                                            <TextView
                                                android:id="@+id/tv3"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_marginTop="@dimen/_5sdp"
                                                android:textColor="@color/grey_textDark"
                                                android:textSize="@dimen/_14sdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:text="( Save 42% )"
                                                android:textColor="@color/grey_textDark"
                                                android:textSize="@dimen/_10sdp"
                                                android:visibility="visible" />

                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>


                                    <androidx.cardview.widget.CardView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:elevation="@dimen/_1sdp"
                                        app:cardCornerRadius="@dimen/_8sdp"
                                        app:cardUseCompatPadding="true">

                                        <LinearLayout
                                            android:id="@+id/llFour"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@color/grey_textDark"
                                            android:clickable="true"
                                            android:foreground="?attr/selectableItemBackground"
                                            android:gravity="center"

                                            android:orientation="vertical"
                                            android:paddingTop="@dimen/_10sdp"
                                            android:paddingBottom="@dimen/_10sdp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:text="12 Months"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_11sdp" />

                                            <TextView
                                                android:id="@+id/tv4"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_marginTop="@dimen/_5sdp"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_14sdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:text="( Save 50% )"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_10sdp"
                                                android:visibility="visible" />

                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:visibility="gone"
                                    android:text="@string/auto_renew"
                                    android:textColor="@color/whiteLight"
                                    android:textSize="@dimen/font_size_medium" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>